// ServicoTransacao.idl
interface ServicoTransacao {
    readonly attribute string nomeServico;
    readonly attribute string versaoServico;

    // Operações financeiras básicas
    Transacao transferir(
        in string contaOrigem,
        in string contaDestino,
        in double valor,
        in string descricao
    ) raises (SaldoInsuficiente, ContaNaoEncontrada, ValorInvalido, ServicoIndisponivel);

    Transacao depositar(
        in string numeroConta,
        in double valor,
        in string descricao
    ) raises (ContaNaoEncontrada, ValorInvalido, ServicoIndisponivel);

    Transacao sacar(
        in string numeroConta,
        in double valor,
        in string descricao
    ) raises (SaldoInsuficiente, ContaNaoEncontrada, ValorInvalido, ServicoIndisponivel);

    // Consultas e relatórios
    Transacao obterTransacao(in string idTransacao)
        raises (TransacaoNaoEncontrada, ServicoIndisponivel);

    Transacao[] obterTransacoesPendentes(in string numeroConta)
        raises (ContaNaoEncontrada, ServicoIndisponivel);

    boolean cancelarTransacao(in string idTransacao)
        raises (TransacaoNaoEncontrada, TransacaoNaoCancelavel, ServicoIndisponivel);

    // Status do serviço
    string obterStatusServico();
    double obterVolumeTransacoesDiario();
};